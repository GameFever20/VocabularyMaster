<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhitish">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/fragment_word_revise_nested_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Word NAme -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorWhiteBg"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/fragment_word_revise_wordname_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="4dp"
                        android:lineSpacingExtra=".9sp"
                        android:text="Word Name"
                        android:textColor="@color/colorBlack"
                        android:textIsSelectable="true"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!--O8tions cardview -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:id="@+id/fragment_word_revise_optionA_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="@color/colorWhiteBg"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/fragment_word_revise_optionA_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="16dp"
                            android:text="Option A"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/fragment_word_revise_optionB_cardview"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="@color/colorWhiteBg"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/fragment_word_revise_optionB_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="16dp"
                            android:text="Option B"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:textStyle="normal"

                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/fragment_word_revise_optionC_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    android:textAlignment="center"

                    app:cardBackgroundColor="@color/colorWhiteBg"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/fragment_word_revise_optionC_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="16dp"
                            android:text="Option C"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:textStyle="normal"

                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/fragment_word_revise_optionD_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="@color/colorWhiteBg"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/fragment_word_revise_optionD_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="16dp"
                            android:text="Option D"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:textStyle="normal"

                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!-- WOrd explaination -->
            <android.support.v7.widget.CardView
                android:id="@+id/fragment_word_revise_explaination_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/colorWhiteBg"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp">


                <!-- WOrd explaination -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="Meaning : "
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlackish"
                        android:textStyle="italic"
                        android:visibility="visible" />

                    <!--SImple line-->
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:alpha=".2"
                        app:cardBackgroundColor="@color/colorBlackish"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"></android.support.v7.widget.CardView>

                    <!--Word Example, Synonym, ANtonym Textvew-->

                    <TextView
                        android:id="@+id/fragment_word_revise_wordMeaning_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:lineSpacingExtra="2sp"
                        android:text="Word meaning"
                        android:textColor="@color/colorBlack"
                        android:textIsSelectable="true"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <!--SImple line-->
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:alpha=".2"
                        app:cardBackgroundColor="@color/colorBlackish"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"></android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/fragment_word_revise_wordExample_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:lineSpacingExtra="2sp"
                        android:text="Word Example"
                        android:textColor="@color/colorBlack"
                        android:textIsSelectable="true"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:visibility="visible" />

                    <!--SImple line-->
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:alpha=".2"
                        app:cardBackgroundColor="@color/colorBlackish"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"></android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="Synonms : "
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlackish"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/fragment_word_revise_wordSynonym_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="0dp"
                        android:alpha=".8"
                        android:lineSpacingExtra="2sp"
                        android:text="No Synonym Available"
                        android:textColor="@color/colorBlack"
                        android:textIsSelectable="true"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <!--SImple line-->
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:alpha=".2"
                        app:cardBackgroundColor="@color/colorBlackish"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"></android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="Antonyms : "
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlackish"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/fragment_word_revise_wordAntonym_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:alpha=".8"
                        android:lineSpacingExtra="2sp"
                        android:text="No Antonym Available"
                        android:textColor="@color/colorBlack"
                        android:textIsSelectable="true"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>